<Window x:Class="TelephoneBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelephoneBook"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView ItemsSource="{Binding List}" Name="Table" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,250,0"  >
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Number" Width="200"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Number}" Header="Name" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
