<Window Background="#EFEFF2"
              Style="{StaticResource ResourceKey=VS2012WindowStyle}"
    x:Class="TelephoneBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelephoneBook"
        mc:Ignorable="d"
             xmlns:converters="clr-namespace:TelephoneBook"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>

        <DataTemplate x:Key="lvDataTemplate">
            <Border Name="border" BorderThickness="1" Padding="5" Margin="0">
                <Grid>
                    <TextBlock TextWrapping="WrapWithOverflow" />
                </Grid>
            </Border>
        </DataTemplate>

    </Window.Resources>
    
    <Grid>

        <ListView Background="#EFEFF2" Foreground="Black" ItemTemplate="{StaticResource lvDataTemplate}" ItemsSource="{Binding List }" Name="Table" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,280,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn  Header="Number"    Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}},Path=ActualWidth,Converter={converters:PercentageConverter}, ConverterParameter='0,5'}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Number}" TextWrapping="Wrap" Margin="5"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Name" Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}},Path=ActualWidth,Converter={converters:PercentageConverter}, ConverterParameter='0,5'}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" TextWrapping="Wrap" Margin="5"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Delete" Click="MenuItem_Click"/>
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>
        <TextBox Name="Text1" HorizontalAlignment="Right" Height="18" Margin="573,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <TextBox Name="Text2" HorizontalAlignment="Right" Height="18" Margin="573,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Button Content="Добавить новый номер" HorizontalAlignment="Right" Margin="573,56,0,0" VerticalAlignment="Top" Width="200" Click="Button_Click"/>
        <Label Content="Имя:" HorizontalAlignment="Right" Margin="0,27,219,0" VerticalAlignment="Top" Height="24" Width="51">

        </Label>
        <Label Content="Номер:" HorizontalAlignment="Right" Margin="0,4,219,0" VerticalAlignment="Top" Height="24" Width="51"/>

    </Grid>
</Window>
